<nav class="navbar navbar-expand-lg bg-body-tertiary navbar-dark bg-primary mb-2" >
  <div class="container">
    <a class="navbar-brand" href="/">Kategoriler</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#categoriesNavbar" aria-controls="categoriesNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="categoriesNavbar">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            @foreach (var item in @Model)
            {
                <li class="nav-item">
                    <a 
                    asp-controller="Shop" 
                    asp-action="List" 
                    asp-route-category="@item.Url" 
                    class="list-group-item list-group-item-action @( ViewBag.SelectedCategory == item.Url ? "active" : "" )">
                        @item.Name
                    </a>
                </li>
            }
      </ul>
    </div>
  </div>
</nav>