@model List<OrderViewModel>

    <h1>Siparişlerim</h1>
    <hr>

    @foreach (var order in Model)
    {
       <table class="table table-bordered table-sm mb-3">
            <thead class="bg-primary">
                <tr>
                    <td colspan="2">Sipariş Id: #@order.OrderNumber</td>
                    <th>Fiyat</th>
                    <th>Adet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in order.OrderItems!)
                {
                    <tr>
                        <td><img src="~/img/@orderItem.ImageUrl" alt="" width="50"></td>
                        <td>@orderItem.Name</td>
                        <td>@orderItem.Price.ToString("c")</td>
                        <td>@orderItem.Quantity</td>
                        
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">Müşteri Adı:</td>
                    <td>@order.FirstName @order.LastName</td>
                    <td rowspan="7">Toplam: @order.TotalPrice().ToString("c")</td>
                </tr>
                <tr>
                    <td colspan="2">Adres: </td>
                    <td>@order.Address</td>
                </tr>
                <tr>
                    <td colspan="2">Email: </td>
                    <td>@order.Email</td>
                </tr>
                <tr>
                    <td colspan="2">Phone: </td>
                    <td>@order.Phone</td>
                </tr>
                <tr>
                    <td colspan="2">Order Status: </td>
                    <td>@order.OrderState</td>
                </tr>
                <tr>
                    <td colspan="2">Payment Type: </td>
                    <td>@order.PaymentType</td>
                    @* <td>@order.OrderDate.ToString("MM/dd/yyyy")</td> *@
                </tr>
                <tr>
                    <td colspan="2">Sipariş Tarihi: </td>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                </tr>
            </tfoot>
       </table> 
    }